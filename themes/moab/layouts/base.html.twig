<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="{{ site.description }}" />
    <meta name="author" content="{{ site.author }}" />

    <link rel="shortcut icon" href="{{ site.url }}/assets/ico/favicon.png" />

    <title>{{ title }} | {{ site.title }}</title>

    {% block css %}
    <link href="{{ site.url }}/assets/css/styles.min.css" rel="stylesheet" />
    {% endblock %}

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

</head>

<body>
    <div class="container">
        <header>
            <div class="col-md-3">
                <div class="box">
                    <div class="logo">
                        <img src="{{ site.url }}/assets/img/logo-white.png" alt="logo" title="logo" />
                    </div>
                    <div class="title">
                        {{ site.title }}
                    </div>
                </div>
            </div>
            <nav>
                <ul>
                <div class="col-lg-4">
                    <li>
                        <a href="{{ site.url }}">
                            Home&nbsp;&nbsp;&nbsp;<i class="glyphicon glyphicon-home"></i>
                        </a>
                    </li>
                    <li>
                        <a href="{{ site.url }}/category/journal">
                            Journal&nbsp;&nbsp;&nbsp;<i class="glyphicon glyphicon-book"></i>
                        </a>
                    </li>
                </div>
                <div class="col-lg-4">
                    <li>
                        <a href="{{ site.url }}/photography">
                            Photography&nbsp;&nbsp;&nbsp;<i class="glyphicon glyphicon-camera"></i>
                        </a>
                    </li>
                    <li>
                        <a href="{{ site.url }}/gear">
                            Gear&nbsp;&nbsp;&nbsp;<i class="glyphicon glyphicon-wrench"></i>
                        </a>
                    </li>
                </div>
                <div class="col-lg-4">
                    <li>
                        <a href="{{ site.url }}/route">
                            Route&nbsp;&nbsp;&nbsp;<i class="glyphicon glyphicon-map-marker"></i>
                        </a>
                    </li>
                    <li>
                        <a href="{{ site.url }}/contact">
                            Contact&nbsp;&nbsp;&nbsp;<i class="glyphicon glyphicon-envelope"></i>
                        </a>
                    </li>
                </div>
                </ul>
            </nav>
        </header>

        {% block main %}
            
        {% endblock %}

        <footer>
            <div class="box">&copy; {{ "now"|date("Y") }} {{ site.author }}</div>
        </footer>
    </div> <!-- /container -->


    <script src="{{ site.url }}/js/scripts.min.js"></script>
</body>
</html>
