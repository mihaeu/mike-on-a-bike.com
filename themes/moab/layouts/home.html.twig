{% extends '@theme/layouts/base.html.twig' %}

{% block main %}
    <articles>
        {% for category, resource in all_categories %}
            {% if category == "Journal" %}
                {% for post in resource|sortBy('date')|reverse %}
                    <article>
                        <div class="box">
                            <div class="icon-{{ post.slug }} img-rounded"></div>
                            {# <img src="{{ site.url }}/assets/img/featured/{{ post.slug }}.jpg" alt="" class="img-rounded" height="232" width="232" title="{{ post.title }}"> #}
                            <div class="title">
                                <h3>{{ post.title }}</h3>
                            </div>
                            <div class="content">
                                <p>{{ post.content|striptags|slice(0,200) }} ...</p>
                            </div>
                            <a href="{{ site.url }}/{{ post.slug }}" class="btn btn-success">Read more</a>
                        </div>
                    </article>
                {% endfor %}
            {% endif %}
        {% endfor %}
    </articles>
{% endblock %}